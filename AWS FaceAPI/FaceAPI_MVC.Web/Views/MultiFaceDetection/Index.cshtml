@model FaceAPI_MVC.Web.Models.MultiFaceDetectionModal

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Microsoft FaceAPI", "", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "", "Home")</li>
                    <li>@Html.ActionLink("Face Detection", "", "FaceDetection")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        <h2>Multiple Face Detection</h2>

        @foreach (var item in Model.Items)
        {
            <h3>@string.Concat("Image Name - ", item.DetectedFaces[0].FileName)</h3>

            <h5>Original Image</h5>

            <img src="@item.DetectedFaces[0].ImagePath" style="width:400px;height:auto" />

            <h5>Detected Faces</h5>

            foreach (var face in item.DetectedFaces)
            {
                <img src="@face.FilePath" width="100" />
                <div class="col-sm-8">
                    <ul>
                        <li>FaceId: @face.FaceId</li>
                        <li>Age: @face.Age</li>
                        <li>Gender: @face.Gender</li>
                        <li>@face.IsSmiling</li>
                        <li>@face.Glasses</li>
                    </ul>
                </div>
            }

            <hr />
        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>